
/**
 * @fileoverview Firestore Security Rules for the school management application.
 *
 * Core Philosophy:
 * This ruleset prioritizes security and data ownership, enforcing strict access controls based on user roles and resource relationships.
 * It also implements a "soft delete" pattern for users via a `status` field.
 *
 * Data Structure:
 * - /branches/{branchId}: Stores branch-specific data.
 * - /users/{userId}: Stores user profiles. Access is heavily restricted for users with a status of 'disabled'.
 * - /students/{studentId}: Stores student data.
 * - /receipts/{receiptId}: Stores payment receipts.
 * - /parentCredentials/{userId}: Stores temporary parent credentials.
 * - /attendance/{attendanceId}: Stores student attendance records.
 * - /subjects/{subjectId}: Publicly readable list of subjects.
 * - /terms/{termId}: Publicly readable list of school terms.
 * - /results/{resultId}: Stores student results.
 * - /reportCards/{cardId}: Stores uploaded result sheets.
 * - /gallery/{imageId}: Publicly readable gallery images.
 *
 * Key Security Decisions:
 * - Active User Enforcement: Most operations require the requesting user to have a status of 'active'.
 * - Ownership & Role Checks: Write operations are restricted to resource owners or authorized roles.
 * - No User Listing (for non-admins): Listing all users is generally disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSignedInUserActive() {
      return isSignedIn() && getUserData(request.auth.uid).status == 'active';
    }

    function isSuperAdmin() {
      return isSignedInUserActive() && getUserData(request.auth.uid).role == 'super_admin';
    }

    function isBranchAdmin() {
      return isSignedInUserActive() && getUserData(request.auth.uid).role == 'branch_admin';
    }

    function isTeacher() {
      return isSignedInUserActive() && getUserData(request.auth.uid).role == 'teacher';
    }

    function isParent() {
      return isSignedInUserActive() && getUserData(request.auth.uid).role == 'parent';
    }

    function isParentOfStudent(studentId) {
      return isParent() && get(/databases/$(database)/documents/students/$(studentId)).data.parentUserId == request.auth.uid;
    }

    function isParentOfReceipt(receiptId) {
        return isParent() && get(/databases/$(database)/documents/receipts/$(receiptId)).data.parentUserId == request.auth.uid;
    }

    function isParentOfStudentInResult(resultId) {
       return isParent() && get(/databases/$(database)/documents/results/$(resultId)).data.studentId != null && get(/databases/$(database)/documents/students/$(get(/databases/$(database)/documents/results/$(resultId)).data.studentId)).data.parentUserId == request.auth.uid;
    }
    
    function isParentOfStudentInReportCard(cardId) {
       return isParent() && get(/databases/$(database)/documents/reportCards/$(cardId)).data.studentId != null && get(/databases/$(database)/documents/students/$(get(/databases/$(database)/documents/reportCards/$(cardId)).data.studentId)).data.parentUserId == request.auth.uid;
    }

    function isOwnerOfResult(resultId) {
      return isTeacher() && get(/databases/$(database)/documents/results/$(resultId)).data.recordedBy == request.auth.uid;
    }
    
    function isTeacherInBranch(branchId) {
        return isTeacher() && getUserData(request.auth.uid).branchId == branchId;
    }
    
    // --- Collection Rules ---

    match /branches/{branchId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin() || (isBranchAdmin() && getUserData(request.auth.uid).branchId == branchId);
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isSuperAdmin() || (isBranchAdmin() && getUserData(userId).branchId == getUserData(request.auth.uid).branchId));
      allow list: if isSuperAdmin() || isBranchAdmin();
      allow create: if isSignedIn(); // Allow creation, status will be set to 'active' by default.
      // Allow admins to update any user in their scope. Users can only update their own profile if active.
      allow update: if (isSuperAdmin() || (isBranchAdmin() && getUserData(userId).branchId == getUserData(request.auth.uid).branchId)) || (isOwner(userId) && isSignedInUserActive());
      allow delete: if false; // Disallow hard deletes. Use status field instead.
    }

    match /students/{studentId} {
      allow get, list: if isSignedInUserActive() && (isSuperAdmin() || (isBranchAdmin() && get(/databases/$(database)/documents/students/$(studentId)).data.branchId == getUserData(request.auth.uid).branchId) || (isTeacher() && getUserData(request.auth.uid).branchId == get(/databases/$(database)/documents/students/$(studentId)).data.branchId) || isParentOfStudent(studentId));
      allow create: if isSuperAdmin() || (isBranchAdmin() && request.resource.data.branchId == getUserData(request.auth.uid).branchId);
      allow update, delete: if isSuperAdmin() || (isBranchAdmin() && get(/databases/$(database)/documents/students/$(studentId)).data.branchId == getUserData(request.auth.uid).branchId);
    }

    match /receipts/{receiptId} {
      allow get, list: if isSignedInUserActive() && (isParentOfReceipt(receiptId) || (isBranchAdmin() && get(/databases/$(database)/documents/receipts/$(receiptId)).data.branchId == getUserData(request.auth.uid).branchId) || isSuperAdmin());
      allow create: if isParent() && isParentOfStudent(request.resource.data.studentId);
      allow update: if isSuperAdmin() || (isBranchAdmin() && get(/databases/$(database)/documents/receipts/$(receiptId)).data.branchId == getUserData(request.auth.uid).branchId);
      allow delete: if isSuperAdmin();
    }

    match /parentCredentials/{userId} {
      allow get, list, update, delete: if false;
      allow create: if true;
    }

    match /attendance/{attendanceId} {
      allow get, list: if (isTeacher() && getUserData(request.auth.uid).branchId == get(/databases/$(database)/documents/attendance/$(attendanceId)).data.branchId) || isSuperAdmin();
      allow create, update: if (isTeacher() && request.resource.data.branchId == getUserData(request.auth.uid).branchId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    match /subjects/{subjectId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin() || isBranchAdmin() || isTeacher();
    }

    match /terms/{termId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /results/{resultId} {
        allow get: if isSignedInUserActive();
        allow list: if isSignedInUserActive();
        allow create: if (isTeacher() && request.resource.data.recordedBy == request.auth.uid) || isSuperAdmin();
        allow update: if isOwnerOfResult(resultId) || isSuperAdmin();
        allow delete: if isSuperAdmin();
    }

    match /reportCards/{cardId} {
        allow create: if isTeacher() || isBranchAdmin() || isSuperAdmin();
        allow get, list: if isSignedInUserActive() && (isSuperAdmin() || isBranchAdmin() || isTeacher() || isParentOfStudentInReportCard(cardId));
        allow update, delete: if isSuperAdmin() || isBranchAdmin();
    }

    match /gallery/{imageId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin() || isBranchAdmin();
    }
  }
}
